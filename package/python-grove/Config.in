config BR2_PACKAGE_PYTHON_GROVE
	bool "python-grove"
	depends on BR2_arm
	depends on BR2_PACKAGE_PYTHON
	depends on BR2_PACKAGE_PYTHON_SMBUS2 # runtime
	select BR2_PACKAGE_PYTHON_RPI_GPIO # runtime
	select BR2_PACKAGE_PYTHON_SETUPTOOLS # runtime
	help
	  A simple tool to access grove sensors on a Raspberry Pi.

	  https://github.com/sa2257/grove.py
